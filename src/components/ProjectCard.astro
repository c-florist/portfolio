---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<a href={`/projects/${project.slug}`} class="block bg-white border border-zinc-300 group">
  <div class="overflow-hidden">
    <Image
      src={project.data.heroImage}
      alt={`Screenshot of ${project.data.title}`}
      class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
    />
  </div>
  <div class="p-8">
    <h3 class="text-2xl font-bold tracking-tighter mb-2 text-zinc-900">{project.data.title}</h3>
    <p class="text-zinc-800 mb-4">{project.data.description}</p>
    <div class="flex flex-wrap gap-2">
      {project.data.technologies.map(tech => (
        <span class="text-xs bg-zinc-100 text-zinc-800 px-2 py-1">{tech}</span>
      ))}
    </div>
  </div>
</a>
