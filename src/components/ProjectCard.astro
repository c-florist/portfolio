---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---
<script>
  import { PowerGlitch } from "powerglitch";

  const initGlitch = () => {
    PowerGlitch.glitch(".glitch", {
      playMode: "hover",
      glitchTimeSpan: { start: 0.2, end: 0.6 },
      timing: { duration: 200 },
      slice: { count: 8, velocity: 25, maxHeight: 0.07 },
      shake: false,
    });
  }

  initGlitch();
  document.addEventListener("astro:page-load", initGlitch);
</script>

<a href={`/projects/${project.slug}`} class="project-card block border border-light-text group transition-all duration-300 hover:border-light-accent-primary glitch">
  <div class="overflow-hidden">
    <Image
      src={project.data.heroImage}
      alt={`Screenshot of ${project.data.title}`}
      class="w-full h-full object-cover transition-transform group-hover:scale-102"
    />
  </div>
  <div class="p-8">
    <h3 class="text-2xl font-bold mb-2 text-light-text">{project.data.title}</h3>
    <p class="text-light-text mb-4">{project.data.description}</p>
    <div class="flex flex-wrap gap-2">
      {project.data.technologies.map(tech => (
        <span class="text-xs bg-light-muted text-light-text px-2 py-1">{tech}</span>
      ))}
    </div>
  </div>
</a>
